<?xml version="1.0" encoding="utf-8"?>
<configuration>	
	<configSections>
	  <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>
	<log4net>
    	<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
    	  <layout type="log4net.Layout.PatternLayout">
    	    <conversionPattern value="%date %-5level %logger - %message%newline" />
    	  </layout>
    	</appender>
    	<appender name="RemoteSyslogAppender" type="log4net.Appender.RemoteSyslogAppender">
    		<remoteAddress value="127.0.0.1" />
    		<layout type="log4net.Layout.PatternLayout, log4net">
    			<conversionPattern value="%-5level %logger - %message%newline" />
    		</layout>
    	</appender>
    	<appender name="LocalSyslogAppender" type="log4net.Appender.LocalSyslogAppender">
    		<layout type="log4net.Layout.PatternLayout, log4net">
    			<conversionPattern value="%-5level %logger - %message%newline" />
    		</layout>
    	</appender>
    	<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    	    <file value=".//logs//logfile." />
    	    <appendToFile value="true" />
    	    <rollingStyle value="Date" />
    		<datePattern value="yyyyMMdd" />
    		<staticLogFileName value="false" />
    	    <layout type="log4net.Layout.PatternLayout">
    	        <conversionPattern value="%date %-5level %logger - %message%newline" />
    	    </layout>
    	</appender>
    	<root>
    	  <level value="DEBUG" />
    	  <!-- appender-ref ref="ConsoleAppender" /-->
    	  <!-- appender-ref ref="RemoteSyslogAppender" /-->
    	  <!-- appender-ref ref="RollingFileAppender" /-->
    	  <appender-ref ref="LocalSyslogAppender" />
    	</root>
	</log4net>
	<appSettings>
		<add key="FolderWatcherRoot" value="/tmp/snhome" />
		<add key="FolderPostProcess" value="/tmp/post" />
		<add key="ExpiryFileDays" value="3" />
	    <add key="CleanJobHours" value="24" />
	    <add key="FileProcessingJobMinutes" value="5" />
	    <add key="MaxFileSizeBytes" value="100000" />
	    <add key="UriProd" value="http://localhost/test.php" />
	    <add key="UriDevel" value="http://localhost/test.php" />
  	</appSettings>
</configuration>
